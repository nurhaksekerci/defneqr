# Test Dockerfile - includes devDependencies
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install ALL dependencies (including devDependencies)
# Use npm install instead of npm ci for test environment to handle lock file sync issues
RUN npm install

# Copy source code
COPY . .

# Generate Prisma Client
RUN npx prisma generate

# Run tests by default
CMD ["npm", "test"]
